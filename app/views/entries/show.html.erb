<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @entry.title %>
</p>

<p>
  <strong>Subhead:</strong>
  <%= @entry.subhead %>
</p>

<p>
  <strong>Body:</strong>
  <%= @entry.body %>
</p>

<p>
  <strong>Author:</strong>
  <%= @entry.author %>
</p>

<p>
    <strong>Comentarios:</strong>
  <% @entry.comments.each do |c| %>
  <strong>Usuario:</strong>
  <%=  c.user %>
  <strong>Comentario:</strong>
  <%= c.body %>
  <% end %>
</p>

<h1>New Comment</h1>
<%= form_with(model: @comment, local: true, :builder => Judge::FormBuilder) do |form| %>

  <div class="field">
    <%= form.label :user %>
    <%= form.text_field :user, id: :comment_user %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :comment_body %>
  </div>

  <%= form.hidden_field :entry_id, value: @entry.id %>


  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>

<%= link_to 'Back', entries_path %>
